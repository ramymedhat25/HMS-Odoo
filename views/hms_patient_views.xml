
<odoo>
    <record id="view_hms_patient_tree" model="ir.ui.view">
        <field name="name">hms.patient.tree</field>
        <field name="model">hms.patient</field>
        <field name="arch" type="xml">
            <tree string="Patients">
                <field name="first_name"/>
                <field name="last_name"/>
                <field name="birth_date"/>
                <field name="blood_type"/>
                <field name="pcr"/>
            </tree>
        </field>
    </record>

    <record id="view_hms_patient_form" model="ir.ui.view">
        <field name="name">hms.patient.form</field>
        <field name="model">hms.patient</field>
        <field name="arch" type="xml">
            <form string="Patient">
                <sheet>
                    <group>
                        <field name="first_name"/>
                        <field name="last_name"/>
                        <field name="birth_date"/>
                        <field name="history" widget='html'/>
                        <field name="cr_ratio"/>
                        <field name="blood_type" widget='selection'/>
                        <field name="pcr"/>
                        <field name="image" widget='image' class="oe_avatar" options='{"preview_image": "image_medium", "size": [90, 90]}'/>
                        <field name="address"/>
                        <label for="age"/>
                        <div>
                            <field name="age" nolabel="1"/>
                        </div>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

<record id="action_hms_patients" model="ir.actions.act_window">
    <field name="name">Patients</field>
    <field name="res_model">hms.patient</field>
    <field name="view_mode">tree,form</field>
</record>

<menuitem id="menu_hms_patient" name="Patients" parent="menu_hms_root" action="action_hms_patients"/>
<menuitem id="menu_hms_doctor" name="Doctors" parent="menu_hms_root" action="action_hms_doctors"/>
<menuitem id="menu_hms_department" name="Departments" parent="menu_hms_root" action="action_hms_departments"/>

</odoo>
